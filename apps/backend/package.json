{
  "name": "@moviescore/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "db:migrate": "tsx src/db/scripts/migrate.ts",
    "db:check": "tsx src/db/scripts/check.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:architecture": "eslint src/modules --max-warnings 0",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@moviescore/shared": "workspace:*",
    "@libsql/client": "^0.15.15",
    "hono": "^4.6.14"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "@cloudflare/workers-types": "^4.20250224.0",
    "pg": "^8.16.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8",
    "wrangler": "^4.33.1"
  }
}
