{
  "name": "moviescore",
  "private": true,
  "packageManager": "pnpm@10.30.1",
  "scripts": {
    "build": "turbo run build",
    "check:commit": "lint-staged && pnpm lint:architecture && pnpm policy:check",
    "check:push": "pnpm policy:check && turbo run lint typecheck test build --continue",
    "dev": "turbo run dev --parallel",
    "harness": "bash scripts/harness/agent-harness.sh",
    "harness:cleanup": "bash scripts/harness/cleanup-expired-sessions.sh",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "lint:architecture": "pnpm --filter @moviescore/backend run lint:architecture",
    "lint": "turbo run lint",
    "maintenance:harness-report": "bash scripts/maintenance/harness-gc-report.sh",
    "maintenance:repo-report": "bash scripts/maintenance/repo-hygiene-report.sh",
    "policy:check": "bash scripts/policy/verify-harness-policy.sh",
    "prepare": "husky",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.1.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{json,md,yml,yaml,css}": [
      "prettier --check"
    ],
    "*.{js,cjs,mjs,ts,tsx}": [
      "prettier --check",
      "eslint --max-warnings 0"
    ],
    "apps/backend/src/modules/**/*.{ts,tsx}": [
      "eslint --max-warnings 0"
    ]
  }
}
